<h3>Address</h3>

<div class="pure-g">
  <div class="pure-u-1">
    <%= form.label :address1, "Address Line 1" %>
    <%= form.text_field :address1, required: true, class: "pure-input-1", data: { action: "invalid->validation#markFieldAsInvalid" } %>
  </div>
</div>

<div class="pure-g">
  <div class="pure-u-1">
    <%= form.label :address2, "Address Line 2" %>
    <%= form.text_field :address2, class: "pure-input-1" %>
  </div>
</div>

<div class="pure-g">
  <div class="pure-u-1 pure-u-md-1-2">
    <%= form.label :town %>
    <%= form.text_field :town, required: true, class: "pure-input-1", data: { action: "invalid->validation#markFieldAsInvalid" } %>
  </div>

  <div class="pure-u-1 pure-u-md-1-2">
    <%= form.label :postcode %>
    <%= form.text_field :postcode, required: true, class: "pure-input-1", data: { action: "invalid->validation#markFieldAsInvalid" } %>
  </div>
</div>
