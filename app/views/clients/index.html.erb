<% content_for :title, "Clients" %>

<h1>Clients</h1>

<div class="pure-g">
  <div class="pure-u-1">
    <div class="filter-controls" data-controller="active-filter">
      <div class="toggle-switch">
        <%= check_box_tag :active_only, "true", @show_active_only, class: "toggle-input", 
            data: { 
              active_filter_target: "checkbox",
              action: "change->active-filter#toggle",
              turbo_frame: "clients_list", 
              turbo_action: "advance" 
            } %>
        <%= label_tag :active_only, "Show active clients only", class: "toggle-label" %>
      </div>
    </div>

    <%= turbo_frame_tag "clients_list" do %>
      <table class="pure-table pure-table-striped" style="width: 100%;">
        <thead>
          <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Address</th>
            <th>Current Rate</th>
            <th>Status</th>
            <th>Uninvoiced Sessions</th>
            <th>Outstanding Amount</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody data-controller="delete-confirmation">
          <% if @clients.any? %>
            <% @clients.each do |client| %>
              <tr id="<%= dom_id client %>">
                <td><%= client.name %></td>
                <td><%= client.email %></td>
                <td><%= full_address(client) %></td>
                <td><%= number_to_currency(client.current_rate&.amount, unit: "Â£") %></td>
                <td><span class="status-badge <%= client.active ? 'active' : 'inactive' %>"><%= client.active ? 'Active' : 'Inactive' %></span></td>
                <td><%= client.uninvoiced_sessions.count %></td>
                <td><%= client.uninvoiced_amount.format %></td>
                <td>
                  <%= link_to client, class: "pure-button pure-button-primary button-small", data: { turbo_frame: "_top" } do %>
                    <span class="material-symbols-outlined">subject</span> View
                  <% end %>
                  <%= link_to edit_client_path(client), class: "pure-button button-small", data: { turbo_frame: "_top" } do %>
                    <span class="material-symbols-outlined">edit</span> Edit
                  <% end %>
                  <% if client.uninvoiced_sessions.any? %>
                    <%= link_to new_client_invoice_path(client), data: { turbo: false }, class: "pure-button button-warning button-small" do %>
                      <span class="material-symbols-outlined">receipt_long</span> Invoice
                    <% end %>
                  <% else %>
                    <button class="pure-button button-warning button-small disabled" disabled>
                      <span class="material-symbols-outlined">receipt_long</span>Invoice
                    </button>
                  <% end %>
                  <button class="pure-button button-danger button-small delete-client-btn"
                          data-id="<%= client.id %>"
                          data-name="<%= client.name %>"
                          data-action="click->delete-confirmation#open">
                    <span class="material-symbols-outlined">delete</span> Delete
                  </button>
                </td>
              </tr>
            <% end %>
          <% else %>
            <tr>
              <td colspan="8" class="is-center">No clients found</td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% end %>
  </div>
</div>

<div class="pure-g">
  <div class="pure-u-1">
    <div class="form-buttons">
      <%= link_to "New client", new_client_path, class: "pure-button pure-button-primary" %>
    </div>
  </div>
</div>

<%= render partial: 'shared/delete_confirmation_dialog', locals: { entity_type: 'client' } %>
