<% content_for :title, @client.name %>

<div class="pure-g">
  <div class="pure-u-1">
    <div class="page-header">
      <h1><%= @client.name %></h1>
      <div class="action-buttons">
        <%= link_to clients_path, class: "pure-button" do %>
          <span class="material-symbols-outlined">arrow_back</span> Back
        <% end %>
        <%= link_to edit_client_path(@client), class: "pure-button pure-button-primary" do %>
          <span class="material-symbols-outlined">edit</span> Edit
        <% end %>
        <%= button_to @client, method: :delete, class: "pure-button button-error", 
            data: { turbo_confirm: "Are you sure you want to delete this client?" } do %>
          <span class="material-symbols-outlined">delete</span> Delete
        <% end %>
      </div>
    </div>
  </div>
</div>

<%= render @client %>

<div class="pure-g">
  <div class="pure-u-1">
    <div class="action-buttons bottom-buttons">
      <%= link_to new_client_path, class: "pure-button" do %>
        <span class="material-symbols-outlined">add</span> New Client
      <% end %>
    </div>
  </div>
</div>

<style>
  .bottom-buttons {
    margin-top: 1em;
    padding-top: 1em;
    border-top: 1px solid #ddd;
  }
  
  .material-symbols-outlined {
    font-size: 1.2em;
    vertical-align: middle;
    margin-right: 0.2em;
  }
  
  @media (max-width: 768px) {
    .page-header {
      flex-direction: column;
      align-items: flex-start;
    }
    
    .page-header h1 {
      margin-bottom: 0.5em;
    }
  }
</style>
