<%= form_with(model: client, class: "pure-form pure-form-stacked", data: { controller: "validation" }) do |form| %>
  <div class="error-explanation" <%= client.errors.empty? && 'hidden' %> data-validation-target="errorExplanation">
    <% if client.errors.any? %>
      <h2><%= pluralize(client.errors.count, "error") %> prohibited this client from being saved:</h2>

      <ul>
        <% client.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    <% end %>
  </div>

  <fieldset>
    <legend>Client Information</legend>
    
    <% if client.persisted? %>
    <div class="pure-g">
      <div class="pure-u-1">
        <div class="toggle-switch">
          <%= form.check_box :active, class: "toggle-input" %>
          <%= form.label :active, "Active Client", class: "toggle-label" %>
        </div>
      </div>
    </div>
    <% end %>

    <div class="pure-g">
      <div class="pure-u-1 pure-u-md-1-2">
        <%= form.label :name %>
        <%= form.text_field :name, required: true, class: "pure-input-1", data: { action: "invalid->validation#markFieldAsInvalid" } %>
      </div>
      
      <div class="pure-u-1 pure-u-md-1-2">
        <%= form.label :email %>
        <%= form.email_field :email, required: true, class: "pure-input-1", data: { action: "invalid->validation#markFieldAsInvalid" } %>
      </div>
    </div>
    
    <div class="pure-g">
      <div class="pure-u-1">
        <%= form.label :address1, "Address Line 1" %>
        <%= form.text_field :address1, required: true, class: "pure-input-1", data: { action: "invalid->validation#markFieldAsInvalid" } %>
      </div>
    </div>
    
    <div class="pure-g">
      <div class="pure-u-1">
        <%= form.label :address2, "Address Line 2" %>
        <%= form.text_field :address2, class: "pure-input-1", data: { action: "invalid->validation#markFieldAsInvalid" } %>
      </div>
    </div>
    
    <div class="pure-g">
      <div class="pure-u-1 pure-u-md-1-2">
        <%= form.label :town %>
        <%= form.text_field :town, required: true, class: "pure-input-1", data: { action: "invalid->validation#markFieldAsInvalid" } %>
      </div>
      
      <div class="pure-u-1 pure-u-md-1-2">
        <%= form.label :postcode %>
        <%= form.text_field :postcode, required: true, placeholder: "e.g. SW1A 1AA", class: "pure-input-1", data: { action: "invalid->validation#markFieldAsInvalid" } %>
        <span class="field-hint">UK format postcode (e.g., SW1A 1AA)</span>
      </div>
    </div>
  </fieldset>
  
  <fieldset>
    <legend>Billing Information</legend>
    
    <div class="pure-g">
      <div class="pure-u-1 pure-u-md-1-2">
        <%= form.label :new_rate, "Hourly Rate" %>
        <div class="pure-input-prepend">
          <span class="input-prefix">Â£</span>
          <%= form.text_field :new_rate, value: client.new_rate&.amount ? (client.new_rate.amount) : "60.00", class: "pure-input-1", step: "0.01", min: "0" %>
        </div>
      </div>
      
      <div class="pure-u-1 pure-u-md-1-2">
        <%= form.label :new_rate_from, "Rate Effective From" %>
        <%= form.date_field :new_rate_from, value: client.new_rate_from || Date.today, class: "pure-input-1" %>
      </div>
    </div>
  </fieldset>

  <div class="form-buttons">
    <%= form.submit class: "pure-button pure-button-primary" %>
    <%= link_to "Cancel", clients_path, class: "pure-button" %>
  </div>
<% end %>

<style>
  .error-explanation {
    color: #e74c3c;
    background-color: #fdf7f7;
    border-left: 4px solid #e74c3c;
    padding: 0.5em 1em;
    margin-bottom: 1em;
  }
  
  .error-explanation h2 {
    font-size: 1.2em;
    margin-top: 0.5em;
  }
  
  fieldset {
    margin-bottom: 1.5em;
    border: 1px solid #ddd;
    padding: 1em;
    border-radius: 4px;
  }
  
  legend {
    font-weight: bold;
    padding: 0 0.5em;
  }
  
  .pure-g {
    margin-bottom: 1em;
  }
  
  .pure-g [class*="pure-u"] {
    padding-right: 1em;
    box-sizing: border-box;
  }
  
  .pure-form label {
    margin: 0.5em 0 0.2em;
    font-weight: bold;
  }
  
  .pure-input-prepend {
    position: relative;
  }
  
  .input-prefix {
    position: absolute;
    left: 10px;
    top: 50%;
    transform: translateY(-50%);
    color: #666;
  }
  
  .pure-input-prepend input {
    padding-left: 25px;
  }
  
  .form-buttons {
    margin-top: 2em;
  }
  
  .pure-button {
    margin-right: 0.5em;
  }

  /* Custom validation styles */
  .field-with-error {
    border-color: #e74c3c !important;
    background-color: #fff0f0 !important;
  }

  .custom-validation-error {
    margin-top: 0.5em;
    margin-bottom: 1em;
  }

  /* Toggle switch styles */
  .toggle-switch {
    margin: 1em 0;
    display: flex;
    align-items: center;
  }

  .toggle-input {
    height: 0;
    width: 0;
    visibility: hidden;
    position: absolute;
  }

  .toggle-label {
    cursor: pointer;
    position: relative;
    display: flex;
    align-items: center;
    padding-left: 60px;
    height: 25px;
    line-height: 25px;
  }

  .toggle-label:before {
    content: '';
    position: absolute;
    left: 0;
    width: 50px;
    height: 25px;
    background: #ccc;
    border-radius: 25px;
    transition: 0.3s;
  }

  .toggle-label:after {
    content: '';
    position: absolute;
    top: 3px;
    left: 3px;
    width: 19px;
    height: 19px;
    background: #fff;
    border-radius: 19px;
    transition: 0.3s;
  }

  .toggle-input:checked + .toggle-label:before {
    background: #4CAF50;
  }

  .toggle-input:checked + .toggle-label:after {
    left: calc(50px - 22px);
  }
</style>
