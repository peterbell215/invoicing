<div id="clearance">
  <h2><%= t(".title") %></h2>

  <%= form_for :session, url: session_path, class: "pure-form pure-form-stacked" do |form| %>
    <div class="pure-u-1 pure-u-md-1-2">
      <%= form.label :email %>
      <%= form.email_field :email, class: "pure-input-1"%>
    </div>

    <div class="pure-u-1 pure-u-md-1-2">
      <%= form.label :password %>
      <%= form.password_field :password, class: "pure-input-1" %>
    </div>

    <div class="form-buttons">
      <%= form.submit class: "pure-button pure-button-primary" %>
    </div>

    <div class="other-links">
      <% if Clearance.configuration.allow_password_reset? %>
        <%= link_to t(".forgot_password"), new_password_path %>
      <% end %>
    </div>
  <% end %>
</div>

<style>
  #clearance {
    min-height: 100vh;
    padding: 20px;
  }
</style>
