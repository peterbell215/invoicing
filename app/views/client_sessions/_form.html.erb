<%= form_with(model: client_session, class: "pure-form pure-form-stacked", data: { controller: "validation set-client-rate" }) do |form| %>
  <%= render 'shared/error_explanation', model: client_session %>

  <fieldset>
    <legend>Session Information</legend>

    <div class="pure-g">
      <div class="pure-u-1">
        <%= form.label :client_id, "Client" %>
        <%= form.select :client_id,
            options_for_select(Client.where(active: true).map { |c| [c.name, c.id, { "data-rate" => c.current_rate.cents }] },  client_session.client_id),
            {},
            { required: true, class: "pure-input-1",
              data: {
                action: "invalid->validation#markFieldAsInvalid change->set-client-rate#setRate",
                set_client_rate_target: "clientSelect"
              }
            }
        %>
      </div>
    </div>


    <div class="pure-g">
      <div class="pure-u-1 pure-u-md-1-3">
        <%= form.label :unit_session_rate, "Rate (£ per unit session)" %>
        <%= form.text_field :unit_session_rate,
            readonly: !client_session.destroyable?,
            required: true,
            class: "pure-input-1",
            data: { set_client_rate_target: "rateField" },
            value: number_to_currency(client_session.unit_session_rate&.to_f || 0, unit: "£")
        %>
      </div>

      <div class="pure-u-1 pure-u-md-1-3">
        <%= form.label :session_date, "Session Date" %>
        <%= form.date_field :session_date, required: true, class: "pure-input-1", data: { action: "invalid->validation#markFieldAsInvalid" } %>
      </div>

      <div class="pure-u-1 pure-u-md-1-3">
        <%= form.label :units, "Units" %>
        <%= form.number_field :units, required: true, min: 1.0, step: 0.5, class: "pure-input-1", data: { action: "invalid->validation#markFieldAsInvalid" } %>
      </div>
    </div>

    <div class="pure-g">
      <div class="pure-u-1">
        <%= form.label :description, "Session Description" %>
        <%= form.text_area :description, class: "pure-input-1", rows: 3, placeholder: "Enter session details or notes here" %>
      </div>
    </div>
  </fieldset>

  <div class="form-buttons">
    <%= form.submit class: "pure-button pure-button-primary", data: { action: "click->validation#resetValidationErrorText" }  %>
    <%= link_to "Cancel", client_sessions_path, class: "pure-button" %>
  </div>
<% end %>

