<% content_for :title, "Session Details" %>

<div class="action-buttons">
  <%= link_to client_sessions_path, class: "pure-button" do %>
    <span class="material-symbols-outlined">arrow_back</span> Back
  <% end %>
  <%= render partial: "buttons", locals: { client_session: @client_session, button_size: "" } %>
</div>

<div class="card mb-4">
  <div class="card-header">
    <h1>Session Details</h1>
  </div>
</div>

<%= render @client_session %>

<div class="pure-g">
  <div class="pure-u-1">
    <div class="action-buttons bottom-buttons">
      <%= link_to new_client_session_path, class: "pure-button" do %>
        <span class="material-symbols-outlined">add</span> New Session
      <% end %>
    </div>
  </div>
</div>

<style>
  .page-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1.5em;
    padding-bottom: 0.5em;
    border-bottom: 1px solid #ddd;
  }
  
  .page-header h1 {
    margin: 0;
  }
  
  .action-buttons {
    display: flex;
    gap: 0.5em;
  }
  
  .action-buttons form {
    margin: 0;
  }
  
  .bottom-buttons {
    margin-top: 1em;
    padding-top: 1em;
    border-top: 1px solid #ddd;
  }
  
  .material-symbols-outlined {
    font-size: 1.2em;
    vertical-align: middle;
    margin-right: 0.2em;
  }
  
  @media (max-width: 768px) {
    .page-header {
      flex-direction: column;
      align-items: flex-start;
    }
    
    .page-header h1 {
      margin-bottom: 0.5em;
    }
  }
</style>