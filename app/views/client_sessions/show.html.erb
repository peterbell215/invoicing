<% content_for :title, "Session Details" %>

<div class="show-buttons">
  <%= render partial: "buttons", locals: { client_session: @client_session, button_size: "" } %>
  <%= link_to client_sessions_path, class: "pure-button" do %>
    <span class="material-symbols-outlined">arrow_back</span> Back
  <% end %>
</div>

<div class="card mb-4">
  <div class="card-header">
    <h1>Session Details</h1>
  </div>
</div>

<%= render @client_session %>

<div class="pure-g">
  <div class="pure-u-1">
    <div class="action-buttons bottom-buttons">
      <%= link_to new_client_session_path, class: "pure-button" do %>
        <span class="material-symbols-outlined">add</span> New Session
      <% end %>
    </div>
  </div>
</div>

<style>
  .bottom-buttons {
    margin-top: 1em;
    padding-top: 1em;
    border-top: 1px solid #ddd;
  }
  
  @media (max-width: 768px) {
    .page-header {
      flex-direction: column;
      align-items: flex-start;
    }
    
    .page-header h1 {
      margin-bottom: 0.5em;
    }
  }
</style>