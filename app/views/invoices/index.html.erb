<% content_for :title, "Invoices" %>

<div class="page-header">
  <h1>Invoices</h1>
</div>

<div class="invoices-index">
  <% if @invoices.any? %>
    <table class="pure-table pure-table-striped">
      <thead>
        <tr>
          <th>Invoice #</th>
          <th>Client</th>
          <th>Date</th>
          <th>Amount</th>
          <th>Status</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody data-controller="delete-confirmation send-confirmation mark-paid-modal">
        <% @invoices.each do |invoice| %>
          <%= render partial: "invoices_row", locals: {invoice: invoice} %>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <div class="no-invoices">
      <p>No invoices found.</p>
      <p>Create your first invoice by selecting a client and generating an invoice for their sessions.</p>
    </div>
  <% end %>
</div>

<%= render partial: 'shared/delete_confirmation_dialog', locals: { entity_type: 'invoice' } %>
<%= render partial: 'shared/send_confirmation_dialog' %>
<%= render partial: 'shared/mark_paid_confirmation_dialog' %>

<style>
  .page-header {
    margin-bottom: 2em;
    border-bottom: 2px solid #eee;
    padding-bottom: 1em;
  }

  .invoices-index {
    margin: 20px 0;
  }

  .pure-table {
    width: 100%;
    margin-bottom: 2em;
  }

  .pure-table th,
  .pure-table td {
    padding: 12px;
    text-align: left;
    border-bottom: 1px solid #e0e0e0;
  }

  .pure-table th {
    background-color: #f7f7f7;
    font-weight: bold;
  }

  .actions {
    white-space: nowrap;
  }

  .actions .pure-button {
    margin-right: 5px;
  }

  .button-small {
    padding: 4px 8px;
    font-size: 12px;
  }

  .button-danger {
    background-color: #d9534f;
    color: white;
  }

  .button-danger:hover {
    background-color: #c9302c;
  }

  .button-success {
    background-color: #5cb85c;
    color: white;
  }

  .button-success:hover {
    background-color: #449d44;
  }

  .status-badge {
    padding: 3px 8px;
    border-radius: 4px;
    font-size: 12px;
    font-weight: bold;
    text-transform: uppercase;
  }

  .status-badge.created {
    background-color: #f0f0f0;
    color: #666;
  }

  .status-badge.sent {
    background-color: #d9edf7;
    color: #31708f;
  }

  .status-badge.paid {
    background-color: #dff0d8;
    color: #3c763d;
  }

  .no-invoices {
    text-align: center;
    padding: 40px;
    color: #666;
  }

  .no-invoices p {
    margin-bottom: 10px;
  }

  form.button_to {
      display: inline;
      /* Add some gap between buttons */
      gap: 10px;
  }
</style>
