<% content_for :title, "Invoices" %>

<div class="page-header">
  <h1>Invoices</h1>
</div>

<div class="invoices-index">
  <% if @invoices.any? %>
    <table class="pure-table pure-table-striped">
      <thead>
        <tr>
          <th>Billing #</th>
          <th>Type</th>
          <th>Client</th>
          <th>Date</th>
          <th>Amount</th>
          <th>Status</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody data-controller="delete-confirmation send-confirmation send-credit-note-confirmation mark-paid-modal">
        <% @invoices.each do |invoice| %>
          <%= render partial: "invoice_row", locals: { invoice: invoice, button_size: "button-small" } %>

          <% invoice.credit_notes.each do |credit_note| %>
            <%= render partial: "credit_note_row", locals: { credit_note: credit_note, button_size: "button-small" } %>
          <% end %>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <div class="no-invoices">
      <p>No invoices found.</p>
      <p>Create your first invoice by selecting a client and generating an invoice for their sessions.</p>
    </div>
  <% end %>
</div>

<% content_for :dialogues do %>
  <%= render partial: 'shared/send_confirmation_dialog' %>
  <%= render partial: 'shared/send_credit_note_confirmation_dialog' %>
  <%= render partial: 'shared/mark_paid_confirmation_dialog' %>
<% end %>

<style>
  .invoices-index {
    margin: 20px 0;
  }

  .pure-table {
    width: 100%;
    margin-bottom: 2em;
  }

  .pure-table th,
  .pure-table td {
    padding: 12px;
    text-align: left;
    border-bottom: 1px solid #e0e0e0;
  }

  .pure-table th {
    background-color: #f7f7f7;
    font-weight: bold;
  }

  .credit-note-row {
    background-color: #f9f9f9;
  }

  .credit-note-row td:first-child {
    padding-left: 30px;
  }

  .actions {
    white-space: nowrap;
  }

  .action-buttons {
    display: flex;
    gap: 5px;
    flex-wrap: nowrap;
  }

  .action-buttons .pure-button {
    margin-right: 5px;
  }

  .no-invoices {
    text-align: center;
    padding: 40px;
    color: #666;
  }

  .no-invoices p {
    margin-bottom: 10px;
  }

  form.button_to {
      display: inline;
      /* Add some gap between buttons */
      gap: 10px;
  }
</style>
