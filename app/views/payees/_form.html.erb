<%= form_with(model: payee, class: "pure-form pure-form-stacked", data: { controller: "validation" }) do |form| %>
  <%= render 'shared/error_explanation', model: payee %>

  <fieldset>
    <legend>Payee Information</legend>

    <% if payee.persisted? %>
      <div class="pure-g">
        <div class="pure-u-1">
          <div class="toggle-switch">
            <%= form.check_box :active, class: "toggle-input" %>
            <%= form.label :active, "Active Payee", class: "toggle-label" %>
          </div>
        </div>
      </div>
    <% end %>

    <div class="pure-g">
      <div class="pure-u-1">
        <%= form.label :organisation %>
        <%= form.text_field :organisation, class: "pure-input-1" %>
      </div>
    </div>

    <div class="pure-g">
      <div class="pure-u-1 pure-u-md-1-2">
        <%= form.label :name %>
        <%= form.text_field :name, required: true, class: "pure-input-1", data: { action: "invalid->validation#markFieldAsInvalid" } %>
      </div>

      <div class="pure-u-1 pure-u-md-1-2">
        <%= form.label :email %>
        <%= form.email_field :email, required: true, class: "pure-input-1", data: { action: "invalid->validation#markFieldAsInvalid" } %>
      </div>
    </div>

    <div class="pure-g">
      <div class="pure-u-1 pure-u-md-1-2">
        <%= form.label :phone %>
        <%= form.telephone_field :phone, class: "pure-input-1" %>
      </div>
    </div>

    <%= render 'shared/address_form', form: form %>
  </fieldset>

  <div class="form-buttons">
    <%= form.submit class: "pure-button pure-button-primary", data: { action: "click->validation#resetValidationErrorText" } %>
    <%= link_to "Cancel", payees_path, class: "pure-button" %>
  </div>
<% end %>
