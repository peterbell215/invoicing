<% content_for :title, "Payee Details" %>

<div class="page-header">
  <h1>Payee Details</h1>
  <div class="action-buttons">
    <%= link_to payees_path, class: "pure-button" do %>
      <span class="material-symbols-outlined">arrow_back</span> Back
    <% end %>
    <%= link_to edit_payee_path(@payee), class: "pure-button pure-button-primary" do %>
      <span class="material-symbols-outlined">edit</span> Edit
    <% end %>
    <% if @payee.clients.empty? %>
      <%= button_to @payee, method: :delete, class: "pure-button button-error",
          data: { turbo_confirm: "Are you sure you want to delete this payee?" } do %>
        <span class="material-symbols-outlined">delete</span> Delete
      <% end %>
    <% end %>
  </div>
</div>

<div class="pure-g">
  <div class="pure-u-1 pure-u-md-1-2">
    <div class="detail-section">
      <h3>Payee Information</h3>
      <div class="detail-item">
        <div class="detail-label">Name:</div>
        <div class="detail-value"><%= @payee.name %></div>
      </div>
      <div class="detail-item">
        <div class="detail-label">Email:</div>
        <div class="detail-value"><%= @payee.email %></div>
      </div>
      <div class="detail-item">
        <div class="detail-label">Phone:</div>
        <div class="detail-value"><%= @payee.phone %></div>
      </div>
      <div class="detail-item">
        <div class="detail-label">Status:</div>
        <div class="detail-value">
          <span class="status-badge <%= @payee.active? ? 'active' : 'inactive' %>">
            <%= @payee.active? ? 'Active' : 'Inactive' %>
          </span>
        </div>
      </div>
    </div>
  </div>

  <div class="pure-u-1 pure-u-md-1-2">
    <div class="detail-section">
      <h3>Address</h3>
      <div class="detail-item">
        <div class="detail-value address-block">
          <%= @payee.address1 %><br>
          <% if @payee.address2.present? %>
            <%= @payee.address2 %><br>
          <% end %>
          <%= @payee.town %><% if @payee.county.present? %>, <%= @payee.county %><% end %><br>
          <%= @payee.postcode %>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="pure-g">
  <div class="pure-u-1">
    <div class="detail-section">
      <h3>Clients</h3>
      <% if @payee.clients.any? %>
        <table class="pure-table pure-table-striped" style="width: 100%;">
          <thead>
            <tr>
              <th>Client</th>
              <th>Email</th>
              <th>Status</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% @payee.clients.order(:name).each do |client| %>
              <tr>
                <td><%= client.name %></td>
                <td><%= client.email %></td>
                <td>
                  <span class="status-badge <%= client.active? ? 'active' : 'inactive' %>">
                    <%= client.active? ? 'Active' : 'Inactive' %>
                  </span>
                </td>
                <td>
                  <%= link_to "View", client, class: "pure-button pure-button-primary button-small" %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      <% else %>
        <p>This payee is not associated with any clients.</p>
      <% end %>
    </div>
  </div>
</div>

<style>
  .page-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1.5em;
    padding-bottom: 0.5em;
    border-bottom: 1px solid #ddd;
  }

  .page-header h1 {
    margin: 0;
  }

  .action-buttons {
    display: flex;
    gap: 0.5em;
  }

  .action-buttons .pure-button {
    display: flex;
    align-items: center;
    gap: 0.25em;
  }

  .detail-section {
    margin-bottom: 1.5em;
    background-color: #f8f9fa;
    padding: 1em;
    border-radius: 4px;
    border-left: 4px solid #0078e7;
  }

  .detail-section h3 {
    margin-top: 0;
    margin-bottom: 0.75em;
    color: #333;
    font-size: 1.2em;
    border-bottom: 1px solid #ddd;
    padding-bottom: 0.5em;
  }

  .detail-item {
    margin-bottom: 0.75em;
    display: flex;
  }

  .detail-label {
    font-weight: bold;
    width: 120px;
    flex-shrink: 0;
  }

  .detail-value {
    flex-grow: 1;
  }

  .address-block {
    line-height: 1.5;
  }

  .status-badge {
    padding: 4px 8px;
    border-radius: 12px;
    font-size: 0.85em;
    font-weight: bold;
    display: inline-block;
  }

  .status-badge.active {
    background-color: #e8f5e9;
    color: #2e7d32;
    border: 1px solid #2e7d32;
  }

  .status-badge.inactive {
    background-color: #ffebee;
    color: #c62828;
    border: 1px solid #c62828;
  }

  .button-small {
    font-size: 0.8em;
    padding: 5px 10px;
  }

  .button-error {
    background-color: #f8f8f8;
    color: #e74c3c;
    border: 1px solid #e74c3c;
  }

  @media (max-width: 768px) {
    .detail-item {
      flex-direction: column;
    }

    .detail-label {
      width: 100%;
      margin-bottom: 0.25em;
    }
  }
</style>
